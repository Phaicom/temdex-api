{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declarationDir": "./dist",
		"outDir": "dist",
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
